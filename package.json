{
  "name": "mcp-local",
  "version": "1.0.0",
  "description": "Local-first Model Context Protocol server with embedded knowledge graph",
  "main": "dist/bin/server.js",
  "bin": {
    "mcp": "./dist/bin/mcp.js"
  },
  "scripts": {
    "build": "esbuild bin/server.ts bin/mcp.ts --bundle --platform=node --outdir=dist --format=cjs --target=node18 --external:better-sqlite3 --external:sqlite3",
    "dev": "ts-node bin/server.ts",
    "cli": "ts-node bin/mcp.ts",
    "test": "vitest",
    "test:complete": "bash scripts/test-complete.sh",
    "test:complete:windows": "powershell -ExecutionPolicy Bypass -File scripts/test-complete.ps1",
    "test:js-embeddings": "node scripts/test-js-embeddings.js",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/*.ts bin/*.ts --fix",
    "format": "prettier --write src/**/*.ts bin/*.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "knowledge-graph",
    "embeddings",
    "local-first"
  ],
  "author": "DevArchitect AI",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "better-sqlite3": "^9.2.2",
    "node-fetch": "^3.3.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
